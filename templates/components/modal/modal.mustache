<div id="modal" class="modal fade" role="dialog" aria-hidden="true" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title"></h5>
                <button type="button" class="close modal-close" id="modal-close" data-dismiss="modal" aria-label="Close" >
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body tab-content">
                <div class="tab-pane fade show active">
                    <div class="modal-text" id="modal-text"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary modal-cancel" data-dismiss="modal" aria-label="Close">{{#str}}close, local_signature{{/str}}</button>
                <button type="button" class="btn btn-success modal-confirm">{{#str}}confirm, local_signature{{/str}}</button>
            </div>
        </div>
    </div>
</div>

<div id="block-course-activity-time-students-progress-{{uniqid}}" class="container-fluid" 
data-courseid="{{course.id}}"
data-students-page="1"
data-limit="30"
data-page="1">
    <div>
        <h2>{{#str}} see_students, block_course_activity_time {{/str}}</h2>
        <h3 class="course-name">{{course.fullname}}</h3>
    </div>
    <h4 class="pt-3">{{#str}} filter, block_course_activity_time {{/str}}</h4>
    <div class="filters row">
        <div class="col-md-3">
            <label for="search">{{#str}} search, block_course_activity_time {{/str}}</label>
            <input type="text" name="search" class="form-control" id="search" placeholder="{{#str}} search_placeholder, block_course_activity_time {{/str}}">
        </div>
        <div class="col-md-2">
            <label for="from">{{#str}} start_date, block_course_activity_time {{/str}}</label>
            <input type="date" id="from" class="form-control" name="from">
        </div>
        <div class="col-md-2">
            <label for="to">{{#str}} end_date, block_course_activity_time {{/str}}</label>
            <input type="date" id="to" class="form-control" name="to">
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <p>{{#str}} total, block_course_activity_time {{/str}}<span class="bold total_students">10</span></p>
        </div>
    </div>
    <div class="pt-3">
        <div class="course-activity-time-table-head row">
            <div class="col-3 text-center">
                {{#str}} name_lable, block_course_activity_time {{/str}}
            </div>
            <div class="col-3 text-center">
                {{#str}} email_label, block_course_activity_time {{/str}}
            </div>
            <div class="col-3 text-center">
                {{#str}} totaltime_label, block_course_activity_time {{/str}}
            </div>
            <div class="col-3 text-center">
                {{#str}} progress_label, block_course_activity_time {{/str}}
            </div>
        </div>
        <div class="course-activity-time-table-body">

        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button class="btn btn-primary see_more">{{#str}} see_more, block_course_activity_time {{/str}}</button>
    </div>
</div>
{{> block_course_activity_time/components/modal/modal }}

{{#js}}
require(
    [
        'jquery',
        'block_course_activity_time/main'
    ], function ($, Main) {
        let root = $('#block-course-activity-time-students-progress-{{uniqid}}');
        Main.initStudentsProgress(root);
    }
);
{{/js}}